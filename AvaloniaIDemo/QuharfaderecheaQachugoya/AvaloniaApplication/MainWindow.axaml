<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication.MainWindow"
        Height="1000" Width="1000"
        Title="AvaloniaApplication"
        WindowState="Maximized">
    <Border x:Name="RenderTestBorder" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,500,0,0" Background="Blue">
        <Border.RenderTransform>
            <TranslateTransform></TranslateTransform>
        </Border.RenderTransform>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Ava</TextBlock>
    </Border>
</Window>

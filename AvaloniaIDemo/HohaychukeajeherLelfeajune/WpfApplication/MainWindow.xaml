<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="WpfMainWindow" Height="1000" Width="1000"
        WindowState="Maximized"
        WindowStyle="None" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1,-1,-1,-1" CaptionHeight="0">

        </WindowChrome>
    </WindowChrome.WindowChrome>
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Border Background="Transparent">
                <ContentPresenter/>
            </Border>
        </ControlTemplate>
    </Window.Template>
    <Grid>
        <Border Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,600,0,0" Background="Red" Opacity="0.6">
            <Border.RenderTransform>
                <TranslateTransform x:Name="BoardTranslateTransform"></TranslateTransform>
            </Border.RenderTransform>
        </Border>
    </Grid>
</Window>

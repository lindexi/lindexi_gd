<Window x:Class="BerlallkilifeherYaybearbohearfake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BerlallkilifeherYaybearbohearfake"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="sss" Binding="{Binding}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Background" Value="CornflowerBlue"></Setter>
                            <!--for check-->
                            <Setter Property="TextAlignment" Value="Right"></Setter>
                            <Setter Property="FontFamily" Value="微软雅黑"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Items>
                <system:String>0</system:String>
            </DataGrid.Items>
        </DataGrid>
    </Grid>
</Window>

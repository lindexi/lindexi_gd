<Window x:Class="FeagafalearjijakeaCunejawhall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeagafalearjijakeaCunejawhall"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <StackPanel Orientation="Vertical">
        <TextBlock Text="My simple Slider"/>

        <TextBox Text="{Binding DecimalValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Slider
            AutomationProperties.AutomationId="Slider_1"
            Minimum="0"
            Maximum="100"
            Margin="4"
            VerticalAlignment="Center"
            Value="{Binding DecimalValue, Mode=TwoWay,  FallbackValue=50}"/>
    </StackPanel>
</Window>

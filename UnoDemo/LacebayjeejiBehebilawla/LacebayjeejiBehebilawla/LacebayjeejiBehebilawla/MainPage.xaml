<Page x:Class="LacebayjeejiBehebilawla.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LacebayjeejiBehebilawla"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Canvas Background="Transparent" PointerMoved="Canvas_OnPointerMoved" PointerWheelChanged="Canvas_OnPointerWheelChanged">
    <TextBlock AutomationProperties.AutomationId="HelloTextBlock"
          Text="Hello Uno Platform"
          HorizontalAlignment="Center">
      <TextBlock.RenderTransform>
        <TransformGroup>
          <ScaleTransform x:Name="HelloTextBlockScale" />
          <TranslateTransform x:Name="HelloTextBlockTransform" />
        </TransformGroup>
      </TextBlock.RenderTransform>
    </TextBlock>
    <Button Canvas.Top="100" Canvas.Left="100" Click="Button_OnClick">X</Button>
  </Canvas>
</Page>
